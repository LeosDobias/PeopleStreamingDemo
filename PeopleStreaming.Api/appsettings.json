{
  "ConnectionStrings": {
    "Default": "Server=localhost\\SQLEXPRESS;Database=CsvTest;Trusted_Connection=True;TrustServerCertificate=True"

  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      }
      //,
      //{
      //  "Name": "File",
      //  "Args": {
      //    "path": "//Logs/log-.txt",
      //    "rollingInterval": "Day",
      //    "restrictedToMinimumLevel": "Verbose"
      //  }
      //}
    ]
  }
}